{
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "dist/",
    "target": "ES2020",
    "module": "CommonJS",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "languages", 
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
}